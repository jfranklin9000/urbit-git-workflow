# This is where the everything lives.
URBIT="`echo ~/URBIT`"

# So go there.
if [ -d $URBIT ]
then
	echo "Updating $URBIT/urbit.git"
	cd $URBIT/urbit.git
	git remote update
else
	echo "$URBIT doesn't exist"
	exit
fi
